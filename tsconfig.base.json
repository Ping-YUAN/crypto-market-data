{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@crypto-market-data/market-data": ["libs/market-data/src/index.ts"],
      "@crypto-market-data/market-data-context": [
        "libs/market-data-context/src/index.ts"
      ],
      "@crypto-market-data/market-data-request": [
        "libs/market-data-request/src/index.ts"
      ],
      "@crypto-market-data/query-form": ["libs/query-form/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
